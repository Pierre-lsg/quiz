{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ answer.label }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ answer.value }}</td>
            </tr>
        </tbody>
    </table>

    {% if questionId %}
    <a href="{{ path('questionAnswer_index', {'idQuiz': quizId, 'idQuestion': questionId}) }}">back to list</a>
    <a href="{{ path('questionAnswer_edit', {'id': answer.id, 'idQuiz': quizId, 'idQuestion': questionId}) }}">edit</a>
    {% else %}
    <a href="{{ path('answer_index') }}">back to list</a>
    <a href="{{ path('answer_edit', {'id': answer.id}) }}">edit</a>
    {% endif %}

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
