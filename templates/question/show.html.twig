{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ question.label }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ question.picture }}</td>
            </tr>
        </tbody>
    </table>

    {% if quizId %}
    <a href="{{ path('quizQuestion_index', {'id': question.id, 'idQuiz': quizId }) }}">back to list</a>
    <a href="{{ path('quizQuestion_edit', {'id': question.id, 'idQuiz': quizId }) }}">edit</a>
    {% else %}
    <a href="{{ path('question_index') }}">back to list</a>
    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
    {% endif %}

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
